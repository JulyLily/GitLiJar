<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="@dimen/dp_220"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/shape_show_dialog_bg">

    <TextView
        android:id="@+id/hint_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginTop="@dimen/dp_6"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_19"
        android:text="title"/>

    <TextView
        android:id="@+id/hint_data"
        android:layout_width="@dimen/dp_150"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_17"
        android:layout_marginBottom="@dimen/dp_10"
        android:text="data"/>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="@dimen/dp_45"
       android:orientation="horizontal">
       <TextView
           android:id="@+id/hint_cancel"
           android:layout_width="0dp"
           android:layout_height="@dimen/dp_45"
           android:layout_weight="1"
           android:gravity="center"
           android:background="@drawable/shap_left_bottom"
           android:textSize="@dimen/sp_16"
           android:text="@string/cancel"/>

       <TextView
           android:id="@+id/hint_sure"
           android:layout_width="0dp"
           android:layout_height="@dimen/dp_45"
           android:layout_weight="1"
           android:gravity="center"
           android:background="@drawable/shape_right_bottom"
           android:textColor="@color/orangered"
           android:textSize="@dimen/sp_16"
           android:text="@string/sure"/>
   </LinearLayout>

</LinearLayout>