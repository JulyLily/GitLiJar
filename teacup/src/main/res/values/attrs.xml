<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--自定义输入-->
    <declare-styleable name="TeaEditText">
        <!--hint文本-->
        <attr name="TEdit_text" format="string"/>
        <attr name="TEdit_onFocus" format="reference"/>
        <attr name="android:inputType"/>
    </declare-styleable>

    <!--自定义雷达-->
    <declare-styleable name="RadarView">
        <!--圈颜色-->
        <attr name="circleColor" format="color"/>
        <!--圆圈的数量-->
        <attr name="circleNum" format="integer"/>
        <!--扫描的颜色 RadarView会对这个颜色做渐变透明处理-->
        <attr name="sweepColor" format="color"/>
        <!--扫描的转速，标识几秒转一圈-->
        <attr name="speed" format="float"/>
        <!--水滴显示和消失的速度-->
        <attr name="flicker" format="float"/>
        <!--水滴颜色-->
        <attr name="raindropColor" format="color"/>
        <!--水滴的颜色 这表示水滴最多能出现的数量 应为水滴是随机1残生的数量是不确定的-->
        <attr name="raindropNum" format="integer"/>
        <!--是否显示交叉线-->
        <attr name="showCross" format="boolean"/>
        <!--是否显示水滴-->
        <attr name="showRaindrop" format="boolean"/>
    </declare-styleable>

    <!--仿qq 气泡拽动效果-->
    <declare-styleable name="BubbleView">
        <!--拽动圆的半径-->
        <attr name="bubbleRadius" format="dimension" />
        <!--拽动圆的颜色-->
        <attr name="bubbleColor" format="color" />
        <attr name="text" format="string" />
        <attr name="textSize" format="dimension" />
        <attr name="textColor" format="color" />
    </declare-styleable>

    <!--漂浮图片-->
    <declare-styleable name="WaveView">
        <!--水波的波峰-->
        <attr name="waveHeight" format="integer"/>
        <!--一个水波的波长-->
        <attr name="waveLength" format="integer"/>
        <!--流动速度-->
        <attr name="waveSpeed" format="integer"/>
        <!--水颜色-->
        <attr name="waterColor" format="color"/>
        <!--漂浮图片-->
        <attr name="flotageImage" format="reference"/>
    </declare-styleable>
</resources>